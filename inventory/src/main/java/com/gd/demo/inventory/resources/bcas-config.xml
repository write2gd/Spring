<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xmlns:mvc="http://www.springframework.org/schema/mvc"

	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
			http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.2.xsd
			http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-3.2.xsd">

	<context:annotation-config />
	<context:component-scan base-package="ec.bcas.gdapp" />
	<mvc:annotation-driven />
	<mvc:resources mapping="/css/**" location="/css/" />
	<mvc:resources mapping="/images/**" location="/images/" />
	<mvc:resources mapping="/scripts/**" location="/scripts/**" />
	<mvc:resources mapping="/fonts/**" location="/fonts/**" />
	<mvc:resources mapping="/gdcryptoresources/**" location="/gdcryptoresources/" />
	<mvc:resources mapping="/service/**" location="/service/**" />
	<!-- <mvc:interceptors>
		<bean class="ec.bcas.gdapp.spring.Action.BcasInterceptor" />
	</mvc:interceptors>
 -->
	<bean id="messageSource"
		class="org.springframework.context.support.ReloadableResourceBundleMessageSource">
		<property name="basenames">
			<list merge="true">
				<value>classpath:i18n/application</value>
			</list>
		</property>
	</bean>
	<bean id="viewResolver"
		class="org.springframework.web.servlet.view.UrlBasedViewResolver">
		<property name="viewClass"
			value="org.springframework.web.servlet.view.tiles2.TilesView" />	
			
	</bean>
	<bean id="tilesConfigurer"
		class="org.springframework.web.servlet.view.tiles2.TilesConfigurer">
		<property name="definitions">
			<list>
				<value>classpath*:ec/bcas/gdapp/resources/templateDefinations.xml</value>
					<value>classpath*:ec/bcas/gdapp/resources/viewDefinations.xml</value>
			</list>
		</property>
	</bean>
	<bean id="bcassessionFactory"
		class="org.springframework.orm.hibernate4.LocalSessionFactoryBean">
		<property name="dataSource" ref="ds" />
		<property name="hibernateProperties">
			<props>
				<prop key="hibernate.dialec">org.hibernate.dialect.SQLServerDialect</prop>
				<prop key="hibernate.show_sql">true</prop>
				<prop key="hibernate.current_session_context_class">thread</prop>
				<prop key="hibernate.hbm2ddl.auto">update</prop>
			</props>
		</property>
		<property name="packagesToScan" value="ec.bcas.gdapp.spring.Database"></property>
	</bean>
	<bean id="transactionManager"
		class="org.springframework.orm.hibernate4.HibernateTransactionManager">
		<property name="sessionFactory" ref="bcassessionFactory"></property>
	</bean>
	<!-- <bean id="ds" class="org.springframework.jndi.JndiObjectFactoryBean" 
		scope="singleton" lazy-init="true"> <property name="jndiName" value="BCAS"/> 
		</bean> -->
	<bean id="ds"
		class="org.springframework.jdbc.datasource.DriverManagerDataSource">
		<property name="driverClassName" value="net.sourceforge.jtds.jdbc.Driver" />
		<property name="url"
			value="jdbc:jtds:sqlserver://172.18.12.169:1433;databaseName=BCAS_GD" />
		<property name="username" value="sa" />
		<property name="password" value="sa@123" />
	</bean>
	 <bean id="userDao" class="ec.bcas.gdapp.hibernet.daoImpl.UserDaoStub">
		<property name="sessionFactory" ref="bcassessionFactory" />
	</bean>
	<bean id="gdDaoAuthenticationService" class="ec.bcas.gdapp.spring.boImpl.AuthenticationService">
  <property name="userdao" ref="userDao"/>
   </bean>
<bean id="jacksonMessageConverter" class="org.springframework.http.converter.json.MappingJacksonHttpMessageConverter"></bean>
<bean class="org.springframework.web.servlet.mvc.annotation.AnnotationMethodHandlerAdapter">
    <property name="messageConverters">
        <list>
            <ref bean="jacksonMessageConverter"/>
        </list>
    </property>
</bean>
</beans>
